{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "*.d.ts", "src/types/index.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "types": [
      "node",
      "lodash-es",
      "vite/client",
      "element-plus/global"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "pages/*": ["./src/pages/*"]
    }
  }
}
